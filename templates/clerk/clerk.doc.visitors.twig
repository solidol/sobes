{% extends "index.twig" %}

{% block title %}
    Картка № {{doc.fullnum}}
{% endblock %}
{% block content %}


    <table width="100%" border="1">
        <tr>
            <td width="20%">
                {{doc.fullnum}}
            </td>
            <td>
                <h2>КОНТРОЛЬ</h2>
            </td>
            <td width="20%">
                {{doc.date_control}}
                <div class="btn-group-vertical">
                    {% if doc.status!='archived' %}
                        <a href="{{path('clerk.doc.edit',{'doc':doc.id})}}" class="btn btn-warning">Редагувати</a>
                    {% endif %}
                    {% if doc.status!='hasresolution' and doc.status!='archived'%}
                        <button type="button" id="addresolutonbtn" class="btn btn-success">Резолюція голови</button>
                    {% endif %}
                </div>
            </td>
        </tr>
        <tr>

            <td  colspan="3">
                <h1>
                    КАРТКА ОБЛІКУ<br>
                    прийому відвідувачів
                </h1>
            </td>

        </tr>
        <tr>
            <td width="20%">
                Громадянин
            </td>
            <td colspan="2">
                {{doc.lastname}} {{doc.firstname}} {{doc.secondname}}
            </td>
        </tr>
        <tr>
            <td width="20%">
                Адреса
            </td>
            <td colspan="2">
                вул. {{doc.street}}, буд. {{doc.building}}, {% if doc.room!='' %}кв. {{doc.room}}{% endif %}
            </td>
        </tr>
        <tr>
            <td width="20%">
                Місце роботи та посада
            </td>
            <td colspan="2">

            </td>
        </tr>
        <tr>
            <td width="20%">
                Звідки, дата, номер
            </td>
            <td colspan="2">

            </td>
        </tr>
        <tr>
            <td width="20%">
                Надійшла повторно
            </td>
            <td colspan="2">

            </td>
        </tr>
        <tr>
            <td width="20%">
                Зміст
            </td>
            <td colspan="2">
                {{doc.summary}}
            </td>
        </tr>
        <tr>
            <td width="20%">
                Резолюція
            </td>
            <td colspan="2">

            </td>
        </tr>
        <tr>
            <td width="20%">
                Історія переміщень
            </td>
            <td colspan="2">

            </td>
        </tr>
        <tr>
            <td width="20%">
                Примітки
            </td>
            <td colspan="2">
                {% if doc.notes is not empty %}
                    {% for item in doc.notes %}
                        {{item.value}}
                        <br/>
                    {% endfor %}
                {% endif %}
            </td>
        </tr>

    </table>

{% endblock %}
