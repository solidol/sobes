{% extends "index.twig" %}

{% block title %}
    Додати документ
{% endblock %}
{% block content %}

    <h1>Система реєстрації та контролю документів</h1>


    <div class="container">

        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#menu2">Звернення громадян</a></li>
            <li><a data-toggle="tab" href="#menu3">Листи від установ</a></li>
            <li><a data-toggle="tab" href="#menu4">Прийом відвідувачів</a></li>
        </ul>

        <div class="tab-content">

            <div id="menu2" class="tab-pane fade in active">
                <h3>Звернення громадян</h3>
                <table id="people" class="display table hover" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Номер</th>
                            <th>Примітки</th>
                            <th>Дата створення</th>
                            <th>Дата контролю</th>
                            <th>Короткий зміст</th>
                            <th>Зведена інформація</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Номер</th>
                            <th>Примітки</th>
                            <th>Дата створення</th>
                            <th>Дата контролю</th>
                            <th>Короткий зміст</th>
                            <th>Зведена інформація</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div id="menu3" class="tab-pane fade">
                <h3>Листи від організацій</h3>
                <table id="org" class="display table hover" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Номер</th>
                            <th>Примітки</th>
                            <th>Дата створення</th>
                            <th>Дата контролю</th>
                            <th>Короткий зміст</th>
                            <th>Зведена інформація</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Номер</th>
                            <th>Примітки</th>
                            <th>Дата створення</th>
                            <th>Дата контролю</th>
                            <th>Короткий зміст</th>
                            <th>Зведена інформація</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div id="menu4" class="tab-pane fade">
                <h3>Прийом відвідувачів</h3>
                <table id="visitors" class="display table hover" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Номер</th>
                            <th>Примітки</th>
                            <th>Дата створення</th>
                            <th>Дата контролю</th>
                            <th>Короткий зміст</th>
                            <th>Зведена інформація</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Номер</th>
                            <th>Примітки</th>
                            <th>Дата створення</th>
                            <th>Дата контролю</th>
                            <th>Короткий зміст</th>
                            <th>Зведена інформація</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>



        <script>
            $(document).ready(function () {

               
                $('#people').DataTable({
                    "language": uk_trans,
                    "processing": true,
                    "serverSide": true,
                    "lengthMenu": [10, 25, "all"],
                    "ajax": "{{path('ajax.document.getlisttyped',{'type':'people'})}}?datecontrol={{ "now"|date("Y-m-d") }}",
                    "columns": [
                        {"data": "num"},
                        {"data": "notes"},
                        {"data": "date_in"},
                        {"data": "date_control"},
                        {"data": "summary"},
                        {"data": "comment"},
                        {"data": "view"},
                        {"data": "arch"}
                    ]


                });
                $('#org').DataTable({
                    "language": uk_trans,
                    "processing": true,
                    "serverSide": true,
                    "lengthMenu": [10, 25, "all"],
                    "ajax": "{{path('ajax.document.getlisttyped',{'type':'org'})}}?datecontrol={{ "now"|date("Y-m-d") }}",
                    "columns": [
                        {"data": "num"},
                        {"data": "notes"},
                        {"data": "date_in"},
                        {"data": "date_control"},
                        {"data": "summary"},
                        {"data": "comment"},
                        {"data": "view"},
                        {"data": "arch"}
                    ]
                });
                $('#visitors').DataTable({
                    "language": uk_trans,
                    "processing": true,
                    "serverSide": true,
                    "lengthMenu": [10, 25, "all"],
                    "ajax": "{{path('ajax.document.getlisttyped',{'type':'visitors'})}}?datecontrol={{ "now"|date("Y-m-d") }}",
                    "columns": [
                        {"data": "num"},
                        {"data": "notes"},
                        {"data": "date_in"},
                        {"data": "date_control"},
                        {"data": "summary"},
                        {"data": "comment"},
                        {"data": "view"},
                        {"data": "arch"}
                    ]
                });
            });
        </script>


        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 pad-10">
                <h2>Документи та списки</h2>
            </div>

        </div>

        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12 pad-10">
                <a href="{{path('clerk.doclist.alltyped',{'type':'people'})}}" class="btn btn-success col-md-12 col-sm-12 col-xs-12">Звернення громадян</a>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12 pad-10">
                <a href="{{path('clerk.doc.new.people')}}" class="btn btn-warning col-md-12 col-sm-12 col-xs-12">Додати звернення</a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12 pad-10">
                <a href="{{path('clerk.doclist.alltyped',{'type':'visit'})}}" class="btn btn-success col-md-12 col-sm-12 col-xs-12">Прийом відвідувачів</a>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12 pad-10">
                <a href="{{path('clerk.doc.new.visitors')}}" class="btn btn-warning col-md-12 col-sm-12 col-xs-12">Додати прийом</a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12 pad-10">
                <a href="{{path('clerk.doclist.alltyped',{'type':'org'})}}" class="btn btn-success col-md-12 col-sm-12 col-xs-12">Листи з установ</a>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12 pad-10">
                <a href="{{path('clerk.doc.new.org')}}" class="btn btn-warning col-md-12 col-sm-12 col-xs-12">Додати лист</a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12 pad-10">
                <a href="{{path('clerk.doclist.alltyped',{'type':'state'})}}" class="btn btn-success col-md-12 col-sm-12 col-xs-12">Розпорядчі документи</a>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12 pad-10">
                <a href="{{path('clerk.doc.new.state')}}" class="btn btn-warning col-md-12 col-sm-12 col-xs-12">Додати розпорядчий лист</a>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 pad-10">
                <h2>Звіти</h2>
            </div>

        </div>


        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 pad-10">
                <a href="{{path('clerk.doclist.all')}}" class="btn btn-success col-md-12 col-sm-12 col-xs-12">Документи з контролем на сьогодні</a>
            </div>

        </div>    


        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12 pad-10">
                <a href="{{path('clerk.report.total',{'startDate':datemonthstart,'endDate':datemonthend})}}" class="btn btn-success col-md-12 col-sm-12 col-xs-12">Звернення (період за датами)</a>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12 pad-10">
                <a href="{{path('clerk.report.totalmonth',{'startY': "now"|date("Y")})}}" class="btn btn-warning col-md-12 col-sm-12 col-xs-12">Звернення (період за мфсяцями)</a>
            </div>
        </div>  


        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12 pad-10">
                <a href="{{path('clerk.report.orgmonth',{'startDate':datemonthstart,'endDate':datemonthend})}}" class="btn btn-success col-md-12 col-sm-12 col-xs-12">Журнал контролю листів з установ</a>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12 pad-10">
                <a href="{{path('clerk.report.orgmonth',{'startDate':datemonthstart,'endDate':datemonthend})}}" class="btn btn-success col-md-12 col-sm-12 col-xs-12">Журнал контролю листів з установ</a>
            </div>
        </div>  

    </div>


{% endblock %}
